<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibili.dao.StudentMapper">
    <resultMap id="BaseResultMap" type="com.bilibili.domain.Student">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
    </resultMap>

    <select id="getStudentById" parameterType="java.lang.Integer" resultType="com.bilibili.domain.Student">
        select
            *
        from student
        where id = #{id}
    </select>
</mapper>